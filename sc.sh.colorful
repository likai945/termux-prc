#!/bin/bash
line(){
	for i in `seq ${#1}`
	do
		echo -en "\e[$[i%7+31]m-"
	done
		echo -e '\e[0m'
}
check(){
	while [ 1 ]
	do
		read -p "screenshot ${1##*/}?" e
		if [ ${e:="yes"} == "yes" ];then
			cd $1
			line `pwd`
			pwd
			line `pwd`
			ls
			break
		elif [ $e == "no" ];then
			break
		else
			echo "yes or no"
		fi
	done
}
